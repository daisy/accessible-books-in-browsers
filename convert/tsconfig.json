{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./build",
        "allowJs": true,
        "target": "ES2020",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "module": "ES2020",
        "sourceMap": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}